<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:background="@drawable/background"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_title"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_isoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_title"
                    android:layout_marginTop="3dp"
                    android:text="iso_639_1 : "
                    android:textColor="@color/secondary_text"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/item_iso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/item_isoName"
                    android:textColor="@color/secondary_text"
                    android:textSize="12dp" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:lineSpacingExtra="2dp"
            android:paddingLeft="10dp"
            android:textColor="@color/primary_text"
            android:textSize="14dp" />


        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="50dp"
            android:paddingRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_like"
                android:text="170"
                android:textColor="@color/title_txt"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="-2dp"
                android:text="1.6K"
                android:drawableLeft="@drawable/ic_baseline_comment_24"
                android:textColor="@color/title_txt"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/item_shares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-2dp"
                android:layout_marginRight="20dp"
                android:text="50K"
                android:drawableLeft="@drawable/ic_baseline_share_24"
                android:textColor="@color/title_txt"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:background="@color/color_line"
            />

    </LinearLayout>
</RelativeLayout>